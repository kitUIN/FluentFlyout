<Application x:Class="FluentFlyout.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:FluentFlyout"
             StartupUri="MainWindow.xaml"
             xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
             xmlns:mica="clr-namespace:MicaWPF.Styles;assembly=MicaWPF"
             xmlns:system="clr-namespace:System;assembly=System.Runtime"
             ShutdownMode="OnExplicitShutdown">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ui:ControlsDictionary />
                <mica:ThemeDictionary Theme="Auto" DesignModeTheme="Auto"/>
                <ui:ThemesDictionary Theme="Unknown"/>
                <mica:ControlsDictionary />
                <ResourceDictionary>
                    <system:Double x:Key="MediaFlyoutButtonSmallWidth">28</system:Double>
                    <system:Double x:Key="MediaFlyoutButtonSmallHeight">28</system:Double>
                </ResourceDictionary>
                <ResourceDictionary Source="Controls/FluentMediaFlyout.xaml"/>
                <!-- default language en-US -->
                <ResourceDictionary Source="Resources/Localization/Dictionary-en-US.xaml"/>
                <!-- resource -->

            </ResourceDictionary.MergedDictionaries>
            <FontFamily x:Key="SegoeFluentIcons">pack://application:,,,/;component/Fonts/#Segoe Fluent Icons</FontFamily>
        </ResourceDictionary>
    </Application.Resources>
</Application>